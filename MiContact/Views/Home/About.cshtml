        <!----TABS---->
        <div class="col-lg-9">
            <div class="card-box card-tabs">
                <ul class="nav nav-pills pull-right">
                    <li class="active">
                        <a href="#Contact" data-toggle="tab" aria-expanded="true">Contact</a>
                    </li>
                    <li class="">
                        <a href="#Social" data-toggle="tab" aria-expanded="false">Social</a>
                    </li>
                    <li class="">
                        <a href="#Email" data-toggle="tab" aria-expanded="false">Email</a>
                    </li>
                    <li class="">
                        <a href="#Image" data-toggle="tab" aria-expanded="false">Image</a>
                    </li>
                </ul>
                <h4 class="header-title m-b-30">All Informations</h4>
                <div class="tab-content">

                    <div id="Contact" class="tab-pane fade in active">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-condensed table-hover">

                                    @if (Model.Contact_IE.Count() > 0)
                                    {
                                        <tr>
                                            <td>
                                                @Html.LabelFor(c => c.Contact.Name)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Contact.Number)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Contact.ContactType)
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <p>Nothing to Show here..</p>
                                    }
                                    @foreach (var item in Model.Contact_IE)
                                    {
                                        <tr>
                                            <td>
                                                <label>@item.Name</label>
                                            </td>
                                            <td>
                                                <label>@item.Number</label>
                                            </td>
                                            <td>
                                                <label>@item.ContactType</label>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <div id="Social" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-condensed table-hover">

                                    @if (Model.Social_IE.Count() > 0)
                                    {
                                        <tr>
                                            <td>
                                                @Html.LabelFor(c => c.Social.Link)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Social.URL)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Social.Description)
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <p>Nothing to Show here..</p>
                                    }
                                    @foreach (var item in Model.Social_IE)
                                    {
                                        <tr>
                                            <td>
                                                <label>@item.Link</label>
                                            </td>
                                            <td>
                                                <label>@item.URL</label>
                                            </td>
                                            <td>
                                                <label>@item.Description</label>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <div id="Email" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-condensed table-hover">
                                    @if (Model.Email_IE.Count() > 0)
                                    {
                                        <tr>
                                            <td>
                                                @Html.LabelFor(c => c.Email.EmailType)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Email.Email)
                                            </td>
                                            <td>
                                                @Html.LabelFor(c => c.Email.Description)
                                            </td>

                                        </tr>
                                    }
                                    else
                                    {
                                        <p>Nothing to Show here..</p>
                                    }
                                    @foreach (var item in Model.Email_IE)
                                    {
                                        <tr>
                                            <td>
                                                <label>@item.EmailType</label>
                                            </td>
                                            <td>
                                                <label>@item.Email</label>
                                            </td>
                                            <td>
                                                <label>@item.Description</label>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <div id="Image" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12">
                                @if (Model.Image_IE.Count() > 0)
                                {
                                    foreach (var item in Model.Image_IE)
                                    {
                                        <div class="col-md-3 col-sm-3 hero-feature">
                                            <div class="thumbnail">
                                                <img src="@Url.Content(item.URL)" alt="@item.Name" />
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
