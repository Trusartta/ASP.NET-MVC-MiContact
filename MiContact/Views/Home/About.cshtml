                        <li>@Html.ActionLink("Delete", "Delete", new { Id = Model.BasicInfo.BasicInfoID })</li>
                    </ul>
                </div>
                <div>
                    <img src="@Url.Content(Model.BasicInfo.ProfilePic)" class="img-circle thumb-xl img-thumbnail m-b-10" alt="profile-image" />
                    @*<p class="text-muted font-13 m-b-30">
                            @Model.BasicInfo.AboutMe
                        </p>*@
                    <div class="text-left">
                        <p class="text-muted font-13"><strong>Full Name :</strong> <span class="m-l-15">@Model.BasicInfo.FirstName</span></p>
                        <p class="text-muted font-13"><strong>Mobile :</strong><span class="m-l-15">@Model.BasicInfo.Mobile</span></p>
                        <p class="text-muted font-13"><strong>Email :</strong> <span class="m-l-15">@Model.BasicInfo.Email</span></p>
                        <p class="text-muted font-13 m-b-5"><strong>Location :</strong> <span class="m-l-15">@Model.BasicInfo.Address</span></p>
